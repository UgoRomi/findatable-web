{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build",
        "^db:generate",
        "$EMAIL_SERVER",
        "$EMAIL_FROM",
        "$GITHUB_ID",
        "$GITHUB_SECRET",
        "$GOOGLE_ID",
        "$GOOGLE_SECRET",
        "$DATABASE_URL"
      ],
      "outputs": ["dist/**", ".next/**"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "generate": {
      "dependsOn": ["^generate"]
    },
    "lint": {
      "outputs": []
    }
  }
}
